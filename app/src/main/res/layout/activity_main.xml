<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zjl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.zjl.wifihotspotwizard.MainActivity">

    <com.tongda.settingitemview.SettingItemView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/setting_item_view_hotspot_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        zjl:content_is_only_display="true"
        zjl:content_title="@string/hotspot_name" />

    <com.tongda.settingitemview.SettingItemView
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/setting_item_view_hotspot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        zjl:content_is_only_display="true"
        zjl:content_title="@string/hotspot_password" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ef5b48"
        android:text="@string/create"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:text="断开连接" />

</LinearLayout>
